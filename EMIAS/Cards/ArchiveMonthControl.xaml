<UserControl x:Class="EMIAS.Cards.ArchiveMonthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMIAS.Cards"
             mc:Ignorable="d" 
                                       d:DesignHeight="253" d:DesignWidth="350">
    <Grid Background="#FFC7C6C6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>

        </Grid.RowDefinitions>
        <TextBlock x:Name="MonthYearText" FontSize="16" />
        <StackPanel x:Name="AppointmentStackPanel" Grid.Row="1"/>
        <TextBlock x:Name="NoAppointmentsText" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Visibility="Collapsed" Text="На этот месяц нет архивных записей" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
