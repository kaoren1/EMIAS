<UserControl x:Class="EMIAS.cards.SpecialistSquareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMIAS.cards"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="339">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DoctorText" FontSize="35" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.ColumnSpan="2" Text="{Binding Doctor}"/>
        <TextBlock x:Name="AddressText" Grid.ColumnSpan="2" FontSize="20" HorizontalAlignment="Center" Grid.Row="1" Text="{Binding Address}"/>
    </Grid>
</UserControl>
